generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Bettas {
  id Int @id @default(autoincrement())

  name               String
  slug               String @unique
  price              Int
  stockLevel         Int
  sku                String
  gender             String
  temperatureCelcius Int
  phMin              Int
  phMax              Int
  widthCm            Int
  HeightCm           Int
  daily              String
  feed               String
  foodType           String
  nature             String
  chemical           String
  imageSmall         String

  variant   Variant? @relation(fields: [variantId], references: [id], onDelete: Cascade)
  variantId Int

  color   Color? @relation(fields: [colorId], references: [id], onDelete: Cascade)
  colorId Int

  grade   Grade? @relation(fields: [gradeId], references: [id], onDelete: Cascade)
  gradeId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Variant {
  id Int @id @default(autoincrement())

  name String
  slug String

  bettas Bettas[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Color {
  id Int @id @default(autoincrement())

  name String
  slug String

  bettas Bettas[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Grade {
  id Int @id @default(autoincrement())

  name String
  slug String

  bettas Bettas[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
